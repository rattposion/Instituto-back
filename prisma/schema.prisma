generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  password String
}

model Testimonial {
  id   Int    @id @default(autoincrement())
  name String
  text String
}

model News {
  id      Int    @id @default(autoincrement())
  title   String
  content String
}

model SiteInfo {
  id    Int    @id @default(autoincrement())
  key   String
  value String
}

model PixelConfig {
  id      Int    @id @default(autoincrement())
  pixelId String
  enabled Boolean
}
